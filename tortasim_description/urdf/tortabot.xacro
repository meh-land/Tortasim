<?xml version='1.0'?>

<robot name="tortabot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find tortasim_description)/urdf/materials.xacro"/>
    <xacro:include filename="$(find tortasim_description)/urdf/tortabot.gazebo.xacro"/>


    <!-- <xacro:property name="cameraSize" value="0.01"/> -->
    <xacro:property name="cameraMass" value="0.1"/>



    <link name="base_footprint" />

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="chassis" />
    </joint>

    <link name='chassis'>
      <pose>0 0 0.1 0 0 0</pose>
  
      <inertial>
        <mass value="5.0"/>
        <origin xyz="0.0 0 0.1" rpy=" 0 0 0"/>
        <inertia
            ixx="0.1" ixy="0" ixz="0"
            iyy="0.1" iyz="0"
            izz="0.1"
        />
      </inertial>
  
      <collision name='collision'>
        <geometry>
          <box size=".3 .3 .1"/>
        </geometry>
      </collision>
  
      <visual name='chassis_visual'>
        <origin xyz="0 0 -0.05" rpy=" 0 0 1.57"/>
        <geometry>
          <!-- <box size=".3 .3 .1"/> -->
          <mesh filename="file://$(find tortasim_description)/meshes/torta_v1_1.dae" />
  
        </geometry>
        <!-- <material name="black"/> -->
      </visual>
  

      <collision name='caster_collision'>
        <origin xyz="-0.15 0 -0.025" rpy=" 0 0 0"/>
        <geometry>
          <sphere radius="0.025"/>
        </geometry>
        <!-- <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface> -->
      </collision>
  
      <visual name='caster_visual'>
        <origin xyz="-0.15 0 -0.025" rpy=" 0 0 0"/>
        <geometry>
          <sphere radius="0.025"/>
        </geometry>
        <material name="green">   </material>
      </visual>
  
      <collision name='caster_front_collision'>
        <origin xyz="0.15 0 -0.025" rpy=" 0 0 0"/>
        <geometry>
          <sphere radius="0.025"/>
        </geometry>
        <!-- <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface> -->
      </collision>
  
      <visual name='caster_front_visual'>
        <origin xyz="0.15 0 -0.025" rpy=" 0 0 0"/>
        <geometry>
          <sphere radius="0.025"/>
        </geometry>
        <material name="green">   </material>
  
      </visual>
  
     
    </link>
  
  

    <link name="left_wheel">
      <!--origin xyz="0.1 0.13 0.1" rpy="0 1.5707 1.5707"/-->
      <collision name="collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.05" length="0.02"/>
        </geometry>
      </collision>
      <visual name="left_wheel_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.05" length="0.02"/>
        </geometry>
        <material name="yellow"/>
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <mass value="5"/>
        <inertia
          ixx=".1" ixy="0.0" ixz="0.0"
          iyy=".1" iyz="0.0"
          izz=".1"/>
      </inertial>
    </link>
  
    <link name="right_wheel">
      <!--origin xyz="0.1 -0.13 0.1" rpy="0 1.5707 1.5707"/-->
      <collision name="collision">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.05" length="0.02"/>
        </geometry>
      </collision>
      <visual name="right_wheel_visual">
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.05" length="0.02"/>
        </geometry>
        <material name="yellow"/>
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
        <mass value="5"/>
        <inertia
          ixx=".1" ixy="0.0" ixz="0.0"
          iyy=".1" iyz="0.0"
          izz=".1"/>
      </inertial>
    </link>
  
  
    <joint type="continuous" name="left_wheel_hinge">
      <origin xyz="0 0.17 0" rpy="0 0 0"/>
      <!--origin xyz="0.1 0.13 0" rpy="0 1.5707 1.5707"/-->
      <child link="left_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <!-- <limit effort="10000" velocity="1000"/> -->
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>
  
    
    <joint type="continuous" name="right_wheel_hinge">
      <origin xyz="0 -0.17 0" rpy="0 0 0"/>
      <!--origin xyz="0.1 -0.13 0" rpy="0 1.5707 1.5707"/-->
      <child link="right_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <!-- <limit effort="10000" velocity="1000"/> -->
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>
  

  
    <!-- Camera -->
    <link name="stereo_camera_link">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.005 0.05 0.015"/>
        </geometry>
      </collision>
  
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.005 0.05 0.015"/>
        </geometry>
        <material name="green"/>
      </visual>
  
      <inertial>
        <mass value="${cameraMass}" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <box_inertia m="${cameraMass}" x="0.005" y="0.05" z="0.015" />
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>
    </link>
  
    <joint name="camera_joint" type="fixed">
      <axis xyz="0 1 0" />
      <origin xyz=".09 0 0.16" rpy="0 0 0"/>
      <parent link="chassis"/>
      <child link="stereo_camera_link"/>
    </joint>


    <!-- IMU -->
    <link name="imu_link">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02 0.02 0.005"/>
        </geometry>
      </collision>
  
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02 0.02 0.005"/>
        </geometry>
        <material name="Blue"/>
      </visual>
  
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <box_inertia m="0.05" x="0.005" y="0.05" z="0.015" />
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>
    </link>
  
    <joint name="IMU_joint" type="fixed">
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <parent link="chassis"/>
      <child link="imu_link"/>
    </joint>
  
  

  <!-- Hokuyo Laser
  <link name="hokuyo_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find hellobot_specs)/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.15 0 0.1" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo_link"/>
  </joint>  -->


</robot>
